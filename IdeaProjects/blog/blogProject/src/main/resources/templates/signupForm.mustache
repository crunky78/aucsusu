{{>layout/header}}
<style>
	#LoginBtn{
		align-content: left;
	}
</style>

<head>
    <title>회원가입 페이지</title>
</head>

<article>
    <div class="container col-md-6" role="main">
        <div class="card">
            <div class="card-header">Register</div>
            <div class="card-body">
                <form name="form" id="form" class="form-signup" role="form" method="post">

                    <input type="radio" name="role" value="ADMIN"> admin
                    <input type="radio" name="role" value="USER" checked="checked"> user <br>

                <div class="form-group row">

                        <label for="uid" class="col-md-3 col-form-label text-md-right">아이디</label>
                        <div class="col-md-5">
                            <input path="uid" id="uid" class="form-control" placeholder="아이디를 입력해 주세요" />
                        </div>
                        <button class="chkID" type="button" id="chkID" value="N">중복확인</button>

                        <!--<c:if test="${multi==true}">아이디가 중복입니다.</c:if>-->
                    </div>

                    <div class="form-group row">
                        <label for="user_name" class="col-md-3 col-form-label text-md-right">이름</label>
                        <div class="col-md-5">
                            <input path="name" id="name" class="form-control" placeholder="이름을 입력해 주세요" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="password" class="col-md-3 col-form-label text-md-right">비밀번호</label>
                        <div class="col-md-5">
                            <input type="password" id="password" class="form-control" placeholder="비밀번호를 입력해 주세요" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="confirmpw" class="col-md-3 col-form-label text-md-right">비밀번호 확인</label>
                        <div class="col-md-5">
                            <input type="password" id="confirmpw" class="form-control" placeholder="비밀번호를 입력해 주세요" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="user_birth" class="col-md-3 col-form-label text-md-right">생년월일</label>
                        <div class="col-md-5">
                            <input path="birth" id="birth" class="user_birth" placeholder="생년월일을 입력해 주세요" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="user_email" class="col-md-3 col-form-label text-md-right">이메일</label>
                        <div class="input-group col-md-7">
                            <div class="input-group-prepend">
                                <span class="input-group-text">@</span>
                            </div>
                            <input path="email" id="email" class="form-control" placeholder="이메일을 입력해 주세요" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div style="margin-top:10px">
            <button type="button" class="btn btn-sm btn-primary" id="btnSignup">회원가입</button>
            <button type="button" class="btn btn-sm btn-primary" id="btnCancel">취소</button>
            <br><br>
            <button class="btn btn-sm btn-primary" name="LoginBtn" id="LoginBtn"><a href="/login/" style="color:white;">로그인 페이지로</a></button>

        </div>
    </div>
</article>

{{>layout/signup-footer}}