<style>
		div#formContainer{
			border:20px solid lightblue;
			padding : 5px 20px;
			position: static;
			width:450px;
			margin-left:auto;
			margin-right:auto;
			margin-top : 50px;
			margin-bottom: 100px;
		}
	</style>

<div id="formContainer">
    <form  style="width:70%;">

        <div class="form-group has-feedback">
            <label class="control-label" for="uid">아이디</label>
            <input class="form-control" type="text" id="uid" name="uid" value="{{user.uid}}" readonly="readonly"/>
        </div>
        <div class="form-group has-feedback">
            <label class="control-label" for="password">현재 패스워드</label>
            <input class="form-control" type="password" id="cPwd" name="cPwd" />
        </div>

        <div class="form-group has-feedback">
            <label class="control-label" for="user_name">성명</label>
            <input class="form-control" type="text" id="name" name="name" value="{{user.name}}" readonly="readonly"/>
        </div>

        <div class="form-group has-feedback">
            <button class="btn btn-danger" id="delete">탈퇴</button>
        </div>
    </form>
</div>


