{{>layout/header}}
{{>category}}

<title>회원정보 수정</title>
</head>
<style>
		div#formContainer{
			border:20px solid lightblue;
			padding : 5px 20px;
			position: static;
			width:450px;
			margin-left:auto;
			margin-right:auto;
			margin-top : 50px;
			margin-bottom: 100px;
		}
	</style>

<div id="formContainer">
    <form  style="width:70%;">

        <div class="form-group has-feedback">
            <label class="control-label" for="uid">아이디</label>
            <input class="form-control" type="text" id="uid" name="uid" value="{{user.uid}}" readonly="readonly"/>
        </div>
        <div class="form-group has-feedback">
            <label class="control-label" for="password">현재 패스워드</label>
            <input class="form-control" type="password" id="cPwd" name="cPwd" />
        </div>
        <div class="form-group has-feedback">
            <label class="control-label" for="password">바꿀 패스워드</label>
            <input class="form-control" type="password" id="password" name="password" />
        </div>
        <div class="form-group has-feedback">
            <label class="control-label" for="password">바꿀 패스워드 확인</label>
            <input class="form-control" type="password" id="confirmpw" name="confirmpw" />
        </div>
        <div class="form-group has-feedback">
            <label class="control-label" for="user_name">성명</label>
            <input class="form-control" type="text" id="name" name="name" value="{{user.name}}"/>
        </div>
        <div class="form-group has-feedback">
            <label class="control-label" for="user_name">생년월일</label>
            <input class="form-control" type="text" id="birth" name="birth" value="{{user.birth}}" readonly="readonly"/>
        </div>
        <div class="form-group has-feedback">
            <label class="control-label" for="user_name">이메일</label>
            <input class="form-control" type="text" id="email" name="email" value="{{user.email}}"/>
        </div>
        <div class="form-group has-feedback">
            <label class="control-label" for="user_name">가입일</label>
            <input class="form-control" type="text" id="reg_date" name="reg_date" value="{{user.reg_date}}" readonly="readonly"/>
        </div>
        <div class="form-group has-feedback">
            <button class="btn btn-success" id="sub">회원정보수정</button>
            <button class="cancel btn btn-danger" type="button">취소</button>
        </div>
    </form>
</div>

{{>layout/footer}}